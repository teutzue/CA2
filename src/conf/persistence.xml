<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="CA2PU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>entity.InfoEntity</class>
    <class>entity.Person</class>
    <class>entity.Company</class>
    <class>entity.Hobby</class>
    <class>entity.Phone</class>
    <class>entity.Address</class>
    <class>entity.CityInfo</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/CA2-test?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
      <property name="eclipselink.canonicalmodel.subpackage" value="production"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="CA2_OpenShiftPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>javaL:/comp/env/jdbc/MySQLDS</jta-data-source>
    <class>entity.Address</class>
    <class>entity.CityInfo</class>
    <class>entity.Company</class>
    <class>entity.Hobby</class>
    <class>entity.InfoEntity</class>
    <class>entity.Person</class>
    <class>entity.Phone</class>
    <properties>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
      <property name="eclipselink.canonicalmodel.subpackage" value="deploy"/>
    </properties>
  </persistence-unit>
  <persistence-unit name="CA2-deployment" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <jta-data-source>java:/CA2-deployment</jta-data-source>
    <class>entity.Address</class>
    <class>entity.CityInfo</class>
    <class>entity.Company</class>
    <class>entity.Hobby</class>
    <class>entity.InfoEntity</class>
    <class>entity.Person</class>
    <class>entity.Phone</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3307/CA2-Deployment?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="eclipselink.canonicalmodel.subpackage" value="production2"/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
